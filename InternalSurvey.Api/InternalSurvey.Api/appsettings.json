{
  "AppSettings": {
    "Secret": "my_custom_Secret_key_for_authentication",
    "UniqueLinkSecret": "My_Custom_Secret_Key"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionString": {
    "SurveyCS": "Data Source=localhost\\SQLEXPRESS;Initial Catalog=SurveyDb;Integrated Security=True"
  },
  "EmailConfiguration": {
    "MailServer": "smtp.gmail.com",
    "MailPort": 587,
    "Sender": "lidiaworkmode@gmail.com",
    "Password": "wladmeikolylfrgr"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "LevelSwitches": { "$controlSwitch": "Information" },
    "MinimumLevel": { "ControlledBy": "$controlSwitch" },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\log.txt",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341/",
          "controlLevelSwitch": "$controlSwitch"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "InternalSurvey.Api"
    }
  },
  "ApplicationsUrl": {
    "UrlQuiz": "http://localhost:4200/user-quiz",
    "UrlThankYou": "http://localhost:4200/thankyou",
    "UrlApp": "https://localhost:44316"
  }
}
